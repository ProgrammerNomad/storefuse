{
  "name": "@storefuse/theme-core",
  "version": "0.1.0",
  "description": "StoreFuse core theme with Tailwind v4 - provides base components for storefronts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./src/styles/globals.css"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "storefuse",
    "theme",
    "tailwind",
    "nextjs",
    "woocommerce"
  ],
  "author": "StoreFuse",
  "license": "MIT",
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "next": "^16.0.0",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@storefuse/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
